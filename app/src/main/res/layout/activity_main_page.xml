<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainPageActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_line1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.53"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_line1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Right_line1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"/>

    <ImageView
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/main"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/bottom_line1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btn_borrow"
        android:layout_width="150dp"
        android:layout_height="144dp"
        android:background="@drawable/borrow"
        app:layout_constraintTop_toBottomOf="@id/btn_search"
        app:layout_constraintRight_toLeftOf="@id/btn_setting"
        app:layout_constraintLeft_toLeftOf="@id/left_line1"/>

    <Button
        android:id="@+id/btn_search"
        android:layout_width="150dp"
        android:layout_height="144dp"
        android:background="@drawable/search"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintRight_toLeftOf="@id/btn_setting"
        app:layout_constraintLeft_toLeftOf="@id/left_line1"/>

    <Button
        android:id="@+id/btn_place"
        android:layout_width="150dp"
        android:layout_height="144dp"
        android:background="@drawable/place"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toRightOf="@id/btn_search"
        app:layout_constraintRight_toRightOf="@id/Right_line1"/>


    <Button
        android:id="@+id/btn_setting"
        android:layout_width="150dp"
        android:layout_height="144dp"
        android:background="@drawable/setting"
        app:layout_constraintTop_toBottomOf="@id/btn_place"
        app:layout_constraintRight_toRightOf="@id/Right_line1"
        app:layout_constraintLeft_toRightOf="@id/btn_borrow"/>



</androidx.constraintlayout.widget.ConstraintLayout>