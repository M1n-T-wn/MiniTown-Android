<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile_chat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/bee"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tv_name_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/img_profile_chat"
            app:layout_constraintLeft_toRightOf="@id/img_profile_chat"
            android:textColor="@color/blue"
            android:fontFamily="@font/noto_sans_bold"
            android:textSize="11sp"
            android:text="안진우"/>


        <TextView
            android:id="@+id/txt_receive_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/receive_message"
            android:fontFamily="@font/noto_sans_bold"
            android:text="보낸 메세지"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:layout_constraintLeft_toRightOf="@id/img_profile_chat"
            app:layout_constraintTop_toBottomOf="@id/tv_name_chat" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
