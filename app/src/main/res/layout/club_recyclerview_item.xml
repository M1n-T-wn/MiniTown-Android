<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_club_image"
        android:layout_width="73dp"
        android:layout_height="73dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/tv_club_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/square"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/img_club_image"
        app:layout_constraintLeft_toRightOf="@id/img_club_image"
        app:layout_constraintBottom_toTopOf="@id/tv_club_place"
        android:text="name"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/tv_club_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_club_name"
        app:layout_constraintBottom_toTopOf="@id/tv_club_contents"
        app:layout_constraintLeft_toRightOf="@id/img_club_image"
        android:layout_marginLeft="20dp"
        android:text="place"
        android:textColor="#666666"
        android:textSize="8sp"/>

    <TextView
        android:id="@+id/tv_club_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/square"
        android:textSize="10sp"
        android:textStyle="normal"
        android:text="text"
        app:layout_constraintTop_toBottomOf="@id/tv_club_place"
        app:layout_constraintBottom_toBottomOf="@id/img_club_image"
        app:layout_constraintLeft_toRightOf="@id/img_club_image"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"/>



</androidx.constraintlayout.widget.ConstraintLayout>